{
  "name": "clean-mac-ui",
  "version": "0.1.0",
  "private": true,
  "main": "main/index.js",
  "description": "A modern macOS cleaning utility.",
  "author": "Antigravity",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "electron:dev": "concurrently \"next dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "next build && node scripts/prepare-distribution.js && electron-builder"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "lucide-react": "^0.556.0",
    "next": "^16.0.7",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "systeminformation": "^5.27.11",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "concurrently": "^9.1.0",
    "electron": "^33.2.1",
    "electron-builder": "^26.0.12",
    "eslint": "^9",
    "eslint-config-next": "16.0.7",
    "typescript": "^5",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.antigravity.cleanmac",
    "productName": "CleanMac",
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.utilities",
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "asarUnpack": [
      "server.js",
      "node_modules/**/*",
      ".next/**/*",
      "package.json"
    ],
    "files": [
      "main/**/*",
      ".next/standalone-final/**/*",
      "!**/*.ts",
      "!*.map"
    ],
    "directories": {
      "output": "dist"
    }
  },
  "overrides": {
    "glob": "^10.4.5",
    "rimraf": "^6.0.0",
    "inflight": "^1.0.6"
  }
}